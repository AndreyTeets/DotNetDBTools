<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(ProjectDir)..\..\..\build\props\Source.props" />

  <PropertyGroup>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoPackageAnalysis>true</NoPackageAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Definition\DotNetDBTools.DefinitionParser.Agnostic\DotNetDBTools.DefinitionParser.Agnostic.csproj" PrivateAssets="all" GeneratePathProperty="true" />
    <ProjectReference Include="..\..\Definition\DotNetDBTools.DefinitionParser.MSSQL\DotNetDBTools.DefinitionParser.MSSQL.csproj" PrivateAssets="all" GeneratePathProperty="true" />
    <ProjectReference Include="..\..\Definition\DotNetDBTools.DefinitionParser.SQLite\DotNetDBTools.DefinitionParser.SQLite.csproj" PrivateAssets="all" GeneratePathProperty="true" />
    <ProjectReference Include="..\..\Description\DotNetDBTools.Description.Agnostic\DotNetDBTools.Description.Agnostic.csproj" PrivateAssets="all" GeneratePathProperty="true" />
    <ProjectReference Include="..\..\Description\DotNetDBTools.Description.MSSQL\DotNetDBTools.Description.MSSQL.csproj" PrivateAssets="all" GeneratePathProperty="true" />
    <ProjectReference Include="..\..\Description\DotNetDBTools.Description.SQLite\DotNetDBTools.Description.SQLite.csproj" PrivateAssets="all" GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)\*.deps.json" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(OutputPath)\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <Import Project="$(ProjectDir)..\..\..\build\targets\Analyzers.Debug.targets"/>

</Project>
