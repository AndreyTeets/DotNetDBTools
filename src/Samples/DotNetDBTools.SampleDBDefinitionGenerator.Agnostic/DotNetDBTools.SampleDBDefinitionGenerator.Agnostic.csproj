<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.2" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" GeneratePathProperty="true" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Definition\DotNetDBTools.DefinitionParser.Agnostic\DotNetDBTools.DefinitionParser.Agnostic.csproj" />
    <ProjectReference Include="..\..\Description\DotNetDBTools.Description.Agnostic\DotNetDBTools.Description.Agnostic.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
  </PropertyGroup>

  <Target Name="GetDependencyTargetPaths">
    <ItemGroup>
      <TargetPathWithTargetPlatformMoniker Include="$(PKGNewtonsoft_Json)\lib\netstandard2.0\Newtonsoft.Json.dll" IncludeRuntimeDependency="false" />
      <TargetPathWithTargetPlatformMoniker Include="..\DotNetDBTools.SampleDBDefinitionGenerator.Agnostic\bin\GeneratorRefAssemblies\*.dll" IncludeRuntimeDependency="false" />
    </ItemGroup>
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /q /y /r &quot;$(TargetDir)DotNetDBTools.Definition*.dll&quot; &quot;$(ProjectDir)bin\GeneratorRefAssemblies\&quot;&#xD;&#xA;xcopy /q /y /r &quot;$(TargetDir)DotNetDBTools.Description*.dll&quot; &quot;$(ProjectDir)bin\GeneratorRefAssemblies\&quot;&#xD;&#xA;xcopy /q /y /r &quot;$(TargetDir)DotNetDBTools.Models*.dll&quot; &quot;$(ProjectDir)bin\GeneratorRefAssemblies\&quot;" />
  </Target>

</Project>
