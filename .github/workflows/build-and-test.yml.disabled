name: Build and Test

on: [push, pull_request]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      - name: Build
        shell: pwsh
        run: ./build/scripts/build.ps1
      - name: Test
        shell: pwsh
        run: ./build/scripts/test.ps1