<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <PackageReference Include="DotNetDBTools.DbDefinitionAbstractions" Version="$(Version)" />
    <PackageReference Include="DotNetDBTools.DbDescriptionGenerator" Version="$(Version)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug'">
    <ProjectReference Include="..\..\..\src\Tools\DotNetDBTools.DbDefinitionAbstractions\DotNetDBTools.DbDefinitionAbstractions.csproj" />
    <ProjectReference Include="..\..\..\src\Tools\DotNetDBTools.DbDescriptionGenerator\DotNetDBTools.DbDescriptionGenerator.csproj" OutputItemType="Analyzer" PrivateAssets="all" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /q /y /r &quot;$(TargetDir)$(TargetName).dll&quot; &quot;$(ProjectDir)bin\DbAssembly\&quot;" />
  </Target>

</Project>
